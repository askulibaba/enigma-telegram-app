# Отключаем звуковой сигнал
Set-PSReadlineOption -BellStyle None

# Улучшаем отображение в консоли
$Host.UI.RawUI.WindowTitle = "PowerShell"
$Host.UI.RawUI.BufferSize = New-Object System.Management.Automation.Host.Size(120, 3000)

# Настройки для улучшения работы с git
$env:TERM = 'xterm-256color'
$env:LESS = '-R'
$env:PAGER = 'less'

# Алиасы для удобной работы
Set-Alias -Name ll -Value Get-ChildItem
Set-Alias -Name g -Value git

# Функция для улучшенного отображения git status
function Get-GitStatus { git status }
Set-Alias -Name gs -Value Get-GitStatus

# Настройка кодировки для корректной работы с русским языком
$OutputEncoding = [System.Text.Encoding]::UTF8
[System.Console]::OutputEncoding = [System.Text.Encoding]::UTF8
[System.Console]::InputEncoding = [System.Text.Encoding]::UTF8

# Отключаем прогресс-бары для улучшения производительности
$ProgressPreference = 'SilentlyContinue'

# Настройка PSReadLine для лучшей работы в Cursor
Set-PSReadLineOption -EditMode Windows
Set-PSReadLineOption -PredictionSource History
Set-PSReadLineOption -HistorySearchCursorMovesToEnd

# Улучшаем отображение ошибок
$ErrorView = 'ConciseView' 